<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.favorited_by?(current_user) %>

              <%= link_to book_favorites_path(@book), method: :delete, class: "favorite_btn" do %>
                ♥<%= @book.favorites.count %>
              <% end %>

            <% else %>

             <%= link_to book_favorites_path(@book), method: :post, class: "favorite_btn" do %>
              ♡<%= @book.favorites.count %>
             <% end %>

            <% end %>
          </td>
            <td>
              <p class="caption"><%= "コメント数：#{@book.comments.count}" %></p>
            </td>
            <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
        </tr>
      </table>

      <div>

        <table>
          <% @comments.each do |comment| %>
          <tr>
            <td><%= image_tag comment.user.get_profile_image, size:"50x50" %><br>
                <%= comment.user.name %><br>
                <%= comment.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td><%= comment.comment %></td>
            <td>
              <% if comment.user == current_user %>
                <%= link_to "Destroy", book_comment_path(comment.book, comment), method: :delete, class: "btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </table>




      <div>
        <%= form_with(model:[@book, @comment], local: true) do |f| %>
        <div>
          <%= f.text_area :comment, :size=>"60x3",placeholder: "コメントする" %>
        </div>
        <div>
          <%= f.submit "送信する" %>
      </div>
        <% end %>
      </div>


    </div>
  </div>
</div>