<div class='col-md-8 offset-md-1'>
      <h2>Following Users</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>follows</th>
            <th>follower</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
            <td><%= image_tag user.get_profile_image, size: '100x100' %></td>
            <td><%= user.name %></td>
            <td>フォロー数：<%= @following_users.count %></td>
            <td>フォロワー数：<%= @follower_users.count %></td>
            <td><%= link_to 'Show', user %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>
  